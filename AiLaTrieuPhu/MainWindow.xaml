<Window x:Class="AiLaTrieuPhu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiLaTrieuPhu"
        mc:Ignorable="d"
        Title="MainWindow" 
        KeyUp="Window_KeyUp"
        Height="500"
        Width="320"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/bg.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>

            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Button 
            VerticalAlignment="Top"
            Width="200"
            Height="40"
            FontSize="20"
            BorderBrush="Transparent"
            Grid.Row="1"
            FontWeight="Medium"
            Content="Bắt đầu"
            Foreground="White"
            Name="btnPlayGame"
            Click="btnPlayGame_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/button3.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
